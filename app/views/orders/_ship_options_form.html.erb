<%= form_for(:order, url: order_ship_options_update_path, html: {id: :ship_options}) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% for method in @shipping_methods %>
    <% checked = true if @shipping_methods.first == method %>
    <%= f.radio_button(:shipping_method_id, method[:id], :checked => checked) %>
