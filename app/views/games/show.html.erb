<div class="container">
  <div class="row header">
    <div class="col-sm-2">
      <%= link_to 'Games', games_path, :class => "btn btn-default back-nav" %>
    </div>
    <div class="col-sm-10">
      <div class="row">
        <div class="col-sm-4 header-image">
          <% if @game.default_image.url %>
            <%= image_tag @game.default_image.url %>
          <% else %>
            <center>No picture available</center>
          <% end %>
        </div>
        <div class="col-sm-8">
          <h2>
            <%= @game.name %>
          </h2>

          <% if @game.description %>
            <p>
              <%= @game.description %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <% if @game.categories.length > 0 %>
        <% category_counter = 1 %>
        <% @game.categories.each do |category| %>
          <% if category.products.length > 0 %>
            <%= '<div class="row">'.html_safe if (category_counter - 1) % 4 == 0 %>
            <div class="col-sm-6 col-md-3">
              <div class="thumbnail">
                <a href="<%= category_path(category) %>">
                  <% if category.default_image.url %>
                    <%= image_tag category.default_image.url %>
                  <% else %>
                    <center>No picture available</center>
                  <% end %>
                </a>
                <div class="caption">
                  <b><%= category.name %></b><br>
                  <br><%= link_to "View category", category, :class => "btn btn-default category_link" %>
                </div>
              </div>
            </div>
            <%= '</div>'.html_safe if category_counter % 4 == 0 || category_counter > @game.categories.length %>
            <% category_counter += 1 %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>