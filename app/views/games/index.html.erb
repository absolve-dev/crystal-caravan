<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <% @games.each do |game| %>
        <div class="row">
          <div class="col-xs-12">
            <div class="thumbnail game">
              <div class="row">
                <div class="col-xs-12 col-sm-3">
                  <a href="<%= game_path(game) %>">
                    <% if game.default_picture.url %>
                      <%= image_tag game.default_picture.url %>
                    <% else %>
                      No picture available
                    <% end %>
                  </a>
                </div>
                <div class="col-xs-12 col-sm-9">
                  <div class="caption game">
                    <b><%= game.name %></b><br>
                    Description: <%= game.description %><br>
                    <%= link_to "View Game", game, :class => "btn btn-default category_link" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>