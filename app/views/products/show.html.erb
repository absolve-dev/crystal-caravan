<div class="container">  
  <div class="row">
      <div class="col-xs-5">
          <h1>Product</h1>
        <p>
          <strong>Name:</strong>
          <%= @product.name %>
        </p>
        
        <p>
          <strong>Category:</strong>
          <%= @product.category_id %>
          <% if @parent_category %>
          <p>Parent Category: <%= link_to @parent_category.name, @parent_category %></p>
          <% end %>
        </p>
        
        <p>
          <strong>Permalink:</strong>
          <%= @product.permalink %>
        </p>
        
        <p>
          <strong>Description:</strong>
          <%= @product.description %>
        </p>
        
        <p>
          <strong>Short description:</strong>
          <%= @product.short_description %>
        </p>
        
        <p>
          <strong>Active:</strong>
          <%= @product.active %>
        </p>
        
        <p>
          <strong>Weight:</strong>
          <%= @product.weight %>
        </p>
        
        <p>
          <strong>Created:</strong>
          <%= @product.created %>
        </p>
        
        <p>
          <strong>Update:</strong>
          <%= @product.update_id %>
        </p>
        
        <p>
          
          <% existing_default = @product.default_picture.url %>
          <% if existing_default %>
            <strong>Picture:</strong><br>
            <%= image_tag existing_default %>
          <% end %>
        </p>
        
        <% if @listings.length > 0 %>
        <h1>Listings</h1>
        <% @listings.each do |listing| %>
        <p><%= listing.name %>: $<%= listing.price %></p>
        <% end %>
        <% end %>
        <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_product_path(@product) %></button>
        <button type="button" class="btn btn-default"><%= link_to 'Back', products_path %></button>
    </div>
  </div>
</div>