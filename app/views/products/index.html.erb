<div class="container">
  <div class="row">
    <div class="col-xs-5">
      <h1>Products</h1>
    </div>
  </div>
  
  <table class="table table-bordered">
    <tr>
      <td class="field-label col-xs-1">
        <label>Category ID</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Name</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Permalink</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Description</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Short Desc</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Active</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Weight</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Created</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Update</label>
      </td>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td class="col-xs-1"><%= product.category_id %></td>
        <td class="col-xs-1"><%= link_to product.name, product_path(product) %></td>
        <td class="col-xs-1"><%= product.permalink %></td>
        <td class="col-xs-1"><%= product.description or "N/A" %></td>
        <td class="col-xs-1"><%= product.short_description or "N/A" %></td>
        <td class="col-xs-1"><%= product.active or "N/A" %></td>
        <td class="col-xs-1"><%= product.weight or "N/A" %></td>
        <td class="col-xs-1"><%= product.created or "N/A" %></td>
        <td class="col-xs-1"><%= product.update_id or "N/A" %></td>
      </tr>
    <% end %>
  </table>
</div>