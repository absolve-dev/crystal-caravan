<html>
  <head>
    <title>Panel Gang</title>
    
    <%= stylesheet_link_tag 'application', params[:controller], media: 'all' %>
  
    <%= javascript_include_tag 'application', params[:controller] %>
    
    <%= csrf_meta_tags %>
    
  </head>
  <body>
    
    <div id="cart_modal" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content" id="dashboard">
        </div>
      </div>
    </div>
    
    <div id="wrapper">
      <nav class="navbar navbar-inverse navbar">
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Crystal Caravan</a>
        </div>
        <div class="container">
        <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class=<%="active" if params[:action] == 'index' %>>
                <%= link_to 'Dashboard', controller: 'panel', action: 'index' %>
              </li>
              <li class=<%="active" if params[:action] == 'categories' %>>
                <%= link_to 'Categories', controller: 'panel', action: 'categories' %>
              </li>
              <li class=<%="active" if params[:action] == 'products' %>>
                <%= link_to 'Products', controller: 'panel', action: 'products' %>
              </li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
      
      <div id="content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>