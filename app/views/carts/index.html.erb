<div class="container">
  <div class="row">
    <div class="col-xs-5">
      <h1>Listing Carts</h1>
    </div>
  </div>
  
  <div class="row" style="padding-bottom:15px">
    <div class="col-xs-1">
      <button type="button" class="btn btn-default"><%= link_to 'New Cart', new_cart_path %></button>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-1">
      <table class="table table-bordered">
        <tr>
          <td class="field-label"><label>Session</label></td>
        </tr>
        <% @carts.each do |cart| %>
          <tr>
            <td>
              <div class="btn-group">
                <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= cart.session_id %><span class="caret"></span>
                </button>
              <ul class="dropdown-menu">
                <li><%= link_to 'Show', cart %></li>
                <li><%= link_to 'Edit', edit_cart_path(cart) %></li>
                <li><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

  
