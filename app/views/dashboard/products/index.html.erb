<div class="container">
  <div class="row">
    <div class="col-xs-5">
      <%= render 'dashboard/shared/product_links' %>
      <h1>Products</h1>
    </div>
  </div>
  
  <div class="row" style="padding-bottom:15px">
    <div class="col-xs-3">
      <%= link_to 'New Product', new_dashboard_product_path, class:"btn btn-default" %>
    </div>
  </div>
  
  <table class="table table-bordered">
    <tr>
      <td class="field-label col-xs-1">
        <label>ID</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Name</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Category ID</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Permalink</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Active</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Weight</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Created</label>
      </td>
      <td class="field-label col-xs-1">
        <label>Updated</label>
      </td>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td class="col-xs-1">
          <%= link_to product.name, edit_dashboard_product_path(product) %>
        </td>
        <td class="col-xs-1"><%= product.category_id %></td>
        <td class="col-xs-1"><%= product.permalink %></td>
        <td class="col-xs-1"><%= product.active or "N/A" %></td>
        <td class="col-xs-1"><%= product.weight or "N/A" %></td>
        <td class="col-xs-1"><%= product.created or "N/A" %></td>
        <td class="col-xs-1"><%= product.update_id or "N/A" %></td>
      </tr>
    <% end %>
  </table>
</div>