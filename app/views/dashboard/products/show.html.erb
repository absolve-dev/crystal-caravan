<div class="container">  
  <div class="row">
      <div class="col-xs-5">
          <h1>Product</h1>
        <p>
          <strong>Name:</strong>
          <%= @product.name %>
        </p>
        
        <p>
          <strong>Category:</strong>
          <%= @product.category_id %>
          <% if @parent_category %>
          <p><strong>Parent Category:</strong> <%= link_to @parent_category.name, dashboard_category_path(@parent_category) %></p>
          <% end %>
        </p>
        
        <p>
          <strong>Permalink:</strong>
          <%= @product.permalink %>
        </p>
        
        <p>
          <strong>Description:</strong>
          <%= @product.description %>
        </p>
        
        <p>
          <strong>Short description:</strong>
          <%= @product.short_description %>
        </p>
        
        <p>
          <strong>Active:</strong>
          <%= @product.active %>
        </p>
        
        <p>
          <strong>Weight:</strong>
          <%= @product.weight %>
        </p>
        
        <p>
          <strong>Created:</strong>
          <%= @product.created %>
        </p>
        
        <p>
          <strong>Update:</strong>
          <%= @product.update_id %>
        </p>
        
        <p>
          <% existing_default = @product.default_picture.url %>
          <% if existing_default %>
            <strong>Picture:</strong><br>
            <%= image_tag existing_default %>
          <% end %>
        </p>
        
        <%= link_to 'Edit', edit_dashboard_product_path(@product), class:"btn btn-default" %>
        <%= link_to 'Back', dashboard_products_path, class:"btn btn-default" %>
    </div>
  </div>
</div>