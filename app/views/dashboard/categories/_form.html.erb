<div class="row header">
  <%= form_for(@category, url: @form_path) do |f| %>
    <% if @category.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
        <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, :class => "form-control" %>
      </div>
      <div class="form-group">
        <b>Game ID</b><br>
        <%= f.text_field :game_id, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :permalink %><br>
        <%= f.text_field :permalink, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description, :style => "resize: none;", :class => "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <h3>Image</h3>
        <%= f.label :default_image %><br>
        <% if @category.default_image.url %>
          <%= image_tag @category.default_image.url, :style => "width: 100%;" %>
        <% else %>
          No picture available
        <% end %>
        <%= f.file_field :default_image, :class => "form-control" %>
      </div>
    </div>
  <% end %>
</div>