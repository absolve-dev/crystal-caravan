<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>

      <h1>Listing Discount Codes</h1>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Percentage</th>
            <th>Deduction</th>
            <th>Usage limit</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @discount_codes.each do |discount_code| %>
            <tr>
              <td><%= discount_code.name %></td>
              <td><%= discount_code.code %></td>
              <td><%= discount_code.percentage %></td>
              <td><%= discount_code.deduction %></td>
              <td><%= discount_code.usage_limit %></td>
              <td><%= link_to 'Show', dashboard_discount_code_path(discount_code) %></td>
              <td><%= link_to 'Edit', edit_dashboard_discount_code_path(discount_code) %></td>
              <td><%= link_to 'Destroy', dashboard_discount_code_path(discount_code), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Discount code', new_dashboard_discount_code_path %>
    </div>
  </div>
</div>