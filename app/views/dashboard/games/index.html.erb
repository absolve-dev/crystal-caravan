<div class="container">
  <div class="row" style="padding-bottom:15px">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>

      <h1>Games</h1>

      <%= link_to 'New Game', new_dashboard_game_path, class: "btn btn-default" %>
    </div>
  </div>
  <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th>Description</th>
          <th>Permalink</th>
          <th>Default picture</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td><%= game.name %></td>
            <td><%= game.created_at %></td>
            <td><%= game.updated_at %></td>
            <td><%= game.description %></td>
            <td><%= game.permalink %></td>
            <td><%= game.default_picture %></td>
            <td><%= link_to 'Show', dashboard_game_path(game) %></td>
            <td><%= link_to 'Edit', edit_dashboard_game_path(game) %></td>
            <td><%= link_to 'Destroy', dashboard_game_path(game), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>